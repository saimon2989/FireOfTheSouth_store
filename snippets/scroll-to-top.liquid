#click-to-top {
  position: fixed;
  bottom: 50px;
  right: 50px;
  height: 50px;
  width: 50px;
  display: none;
  place-items: center;
  border-radius: 50%;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  cursor: pointer;
  align-items: center;
  justify-content: center;
  z-index: 5;
}
#scroll-bar-value {
  display: block;
  height: 42px;
  width: 42px;
  background-color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  place-items: center;
  font-size: 35px;
  color: #001a2e;
}
  
{% endstyle %}  

      
