
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .contact-block_wrapper .contact-info{display: flex; align-items: center; justify-content: center;    column-gap: 5rem;} 
/*   .contact-block_wrapper .contact-info  .contact-heading{margin:0 0 10px;font-size:2rem;font-weight:500;line-height: normal;} */
  .contact-block_wrapper .contact-info  .contact-heading {
    margin: 0 0 10px;
    font-size: calc(var(--font-heading-scale) * 2.8rem);
    font-weight: 700;
    line-height: normal;
}
  .contact-block_wrapper .link{text-decoration:none;color: initial;}
  .contact-block_wrapper .contact-info .contact-address address{font-style: normal;color: var(--gradient-base-accent-2);}
  .contact-block_wrapper .contact-info .list-social__item .icon{display:none;}
  .contact-block_wrapper .contact-info .contact-social .list-social__link{padding:0;}
  .contact-block_wrapper .contact-info .contact-social .contact__list-social{margin:0;}
  .contact-block_wrapper .contact-info .contact-social .contact__list-social li:not(:last-child) .list-social__link:after {
    content: "-";
    display: inline-block;
    margin: 0 8px;
   }
  .contact-block_wrapper .contact-info .contact-block > *:not(:last-child) {
    margin-bottom: 3.5rem;
    }
  .contact-block_wrapper .contact-info .contact-block > *:not(.button) > i {
          font-size: 2.5rem;
    margin-right: 2.5rem;
    color: initial;
  }
  .contact-block_wrapper .contact-info .contact-block > a.button i {
        margin-left: 1rem;
  }
  .contact-block_wrapper .contact-info .contact-block address {
      font-style: normal;
          color: var(--gradient-base-background-3);
  }
  .contact-block_wrapper .contact-info .contact-block a.link:hover {
    color: var(--gradient-base-accent-2);
  }
  .contact-block_wrapper .contact-info .contact-block a.button.button--secondary {
      color: rgb(var(--color-base-accent-2));
  }
  .contact-block_wrapper .contact-info .contact-block a.button.button--secondary:hover {
      color: rgb(var(--color-base-background-1));
  }
  {% for block in section.blocks %}
  .contact-block_wrapper .contact-info .contact-block-{{ forloop.index }}{position:relative;background: transparent;}
    .contact-block_wrapper .contact-info .contact-block-{{ forloop.index }}:after {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        display: inline-block;
        right: 0;
        top: 0;
        background: var(--gradient-background);
        z-index: -1;
        opacity: {{ block.settings.bg-opacity }};
    }
  {% endfor %}

  .contact-block_wrapper .contact-info .contact-block {
      padding: 4rem 4rem;
      background: transparent;
        display: flex;
    flex-direction: column;
    align-items: flex-start;
    font-size: 1.8rem;
    font-family: var(--font-heading-family);
        line-height: 1.5;
    width: 48rem;
    padding-left: 6rem;
  }
  .contact-block_wrapper .contact-info .contact-block>a{font-size: 1.8rem;}
 @media screen and (max-width: 1330px) {
  .contact-block_wrapper .contact-info .contact-block{  padding: 3rem 2rem;}
 }
  @media screen and (max-width: 1199px) {
    .contact-block_wrapper .contact-info{
      flex-direction: column;
    row-gap: 3rem;
    }
  }
  @media screen and (max-width: 767px) {
    .contact-block_wrapper .contact-info{grid-template-columns: repeat(2, 1fr);grid-gap: 20px;}
    .contact-block_wrapper .contact-info .contact-social {left: 50%;}
  }
  @media screen and (max-width: 400px) {
     .contact-block_wrapper .contact-info{grid-template-columns: repeat(1, 1fr);}
     .contact-block_wrapper .contact-info .contact-social {left: 0%;}
  }
  @media screen and (min-width: 991px){
    .contact-section .contact-section-wrapper .title-wrapper-with-link.content-align--center{max-width: 65%;margin:auto;margin-bottom:5rem;}
  }
  @media screen and (max-width: 990px)
  {
      .contact-block_wrapper .contact-info {
        grid-template-columns: repeat(2, 1fr);
      }  
    .contact-section .contact-section-wrapper .title-wrapper-with-link.content-align--center{max-width: 60rem;margin:auto;margin-bottom:3rem}
       {% for block in section.blocks %}
          .contact-block_wrapper .contact-info .contact-block-{{ forloop.index }}:after {opacity: 0.8;}
        {% endfor %}
  }
  @media screen and (max-width: 580px)
  {
    .contact-block_wrapper .contact-info {
        grid-template-columns: 1fr;
    }
    .contact-block_wrapper .contact-info .contact-block{
      min-width: 29rem;
    max-width: 100%;
    }
    .contact-block_wrapper .contact-info .contact-block>a,
    .contact-block_wrapper .contact-info .contact-block address{font-size:16px;}
  }

  .section-contact-section .contact-section .title-wrapper-with-link .title{margin-bottom:3rem;}
  {%- endstyle -%}


<div class="contact-section color-{{ section.settings.color_scheme }} gradient{% if section.settings.title == blank %} no-heading{% endif %} {{ section.settings.custom_class_name }} ">
 <div class="{% if section.settings.page_full_width %} page-full-width {% else %} page-width {% endif %} {% if section.settings.page_full_width_spacing %} page-full-width_spacing {% endif %}section-{{ section.id }}-padding isolate">
 <div class="row"> 
  <div class="contact-section-wrapper">
     {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin content-align--{{ section.settings.column_alignment }}">
         {%- if section.settings.sub_heading != blank -%}  
         <h6 class="sub-heading">{{ section.settings.sub_heading | escape }}</h6>
         {%- endif -%} 
         {%- if section.settings.title != blank -%}  
          <h2 class="title {{ section.settings.heading_size }}">
            {{ section.settings.title | escape }}
          </h2>
          {%- endif -%} 
          {%- if section.settings.description != blank -%}  
          <p class="description">{{ section.settings.description }}</p>
          {%- endif -%}   
          {%- if section.settings.button_label != blank -%}
            <a {% if section.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link }}"{% endif %} class="button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}">{{ section.settings.button_label | escape }}</a>
          {%- endif -%}
          </div>
    {%- endunless -%}
      <div class="contact-block_wrapper">
        <div class="contact-info list-unstyled">
<!--             {% if section.settings.contact_phone_no != blank %}
                <div class="contact-phone">
                 <h6 class="contact-heading">{{ section.settings.contact-heading_phone }}</h6>
                 <a href="tel:{{ section.settings.contact_phone_no }}" class="link">   
                  {{ section.settings.contact_phone_no }}  
                </a>   
                </div>
             {% endif %}
            {% if section.settings.contact_address != blank %}
                <div class="contact-address"> 
                  <h6 class="contact-heading">{{ section.settings.contact-heading_address }}</h6>
                  <address>{{ section.settings.contact_address }}</address>
                </div>
            {% endif %}  
             {% if section.settings.show_social_icons != blank %}
                <div class="contact-social">
                 <h6 class="contact-heading">{{ section.settings.contact-heading_social }}</h6>
                   {%- if section.settings.show_social_icons -%}
                <ul class="contact__list-social list-unstyled list-social" role="list">
                   {% render 'social-icons' %}
                </ul>
                {%- endif -%}
                </div>
             {% endif %} -->
          
             {% for block in section.blocks %}
              <div class="contact-block contact-block-{{ forloop.index }} color-{{ block.settings.block_color_scheme }} gradient">
               {% if block.settings.contact-heading_address != blank %}
                <h6 class="contact-heading">{{ block.settings.contact-heading_address }}</h6>
                {% endif %}
                {% if block.settings.contact_address != blank %}<address><i class="fa fa-map-marker"></i>{{ block.settings.contact_address }}</address>{% endif %}
               
               {% if block.settings.contact_phone_no != blank %}
                <a href="tel:{{ block.settings.contact_phone_no }}" class="link">   
                   <i class="fa fa-phone"></i>{{ block.settings.contact_phone_no }}  
                </a> 
               {% endif %}
               {% if block.settings.contact_mail != blank %}
                <a href="mailto:{{ block.settings.contact_mail }}" class="link">   
                  <i class="fa fa-envelope"></i>{{ block.settings.contact_mail }}  
                </a> 
                {% endif %}
               {% if block.settings.link_label != blank %}
                <a href="{{ block.settings.link }}" class="button button--secondary">{{ block.settings.link_label }}<i class="fa fa-map"></i></a>
               {% endif %}
              </div>
             {% endfor %}
        </div>       
     </div>
  </div>
 </div>
</div>
</div>

{% schema %}
{
  "name": "t:sections.contact-section.name",
  "class": "section section-contact-section",
  "tag": "section",
  "settings": [
    {
      "type":"checkbox",
      "id":"page_full_width",
       "default": false,
      "label": "t:sections.all.page_full_width.label"
    },
    {
      "type":"checkbox",
      "id":"page_full_width_spacing",
       "default": false,
      "label": "t:sections.all.page_full_width_spacing.label"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Contact Section",
      "label": "t:sections.all.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "t:sections.all.sub_heading.label"
    },
     {
      "type": "text",
      "id": "description",
      "label": "t:sections.all.description.label"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Button label",
      "label": "t:sections.all.button_label.label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:sections.all.button_link.label"
    },
    {
      "type": "checkbox",
      "id": "button_style_secondary",
      "default": false,
      "label": "t:sections.all.button_style_secondary.label"
      },
    {
      "type": "select",
      "id": "column_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.contact-section.settings.column_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.contact-section.settings.column_alignment.options__2.label"
        }
      ],
      "default": "left",
      "label": "t:sections.contact-section.settings.column_alignment.label"
    },
  
     {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
    "type": "header",
    "content": "t:sections.all.custom_class_heading.content"
    },
    {
    "type": "text",
    "id": "custom_class_name",
    "label": "t:sections.all.custom_class_name.label"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "t:sections.contact-section.blocks.column.name",
      "settings": [
        {
          "type": "text",
          "id": "contact-heading_address",
          "default": "LOS ANGELES",
          "label": "t:sections.contact-section.blocks.column.settings.contact-heading_address.label"
        },
        {
          "type": "text",
          "id": "contact_address",
          "default": "648 Selby Road Stillwater, MN 55082",
          "label": "t:sections.contact-section.blocks.column.settings.contact_address.label"
        },
        {
          "type": "text",
          "id": "contact_mail",
          "label": "t:sections.contact-section.blocks.column.settings.contact_mail.label"
          
        },
        {
          "type": "text",
          "id": "contact_phone_no",
          "label": "t:sections.contact-section.blocks.column.settings.contact_phone_no.label"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "t:sections.contact-section.blocks.column.settings.link_label.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.contact-section.blocks.column.settings.link.label"
        },
        {
            "type": "select",
            "id": "block_color_scheme",
            "options": [
              {
                "value": "accent-1",
                "label": "t:sections.all.colors.accent_1.label"
              },
              {
                "value": "accent-2",
                "label": "t:sections.all.colors.accent_2.label"
              },
              {
                "value": "background-1",
                "label": "t:sections.all.colors.background_1.label"
              },
              {
                "value": "background-2",
                "label": "t:sections.all.colors.background_2.label"
              },
              {
                "value": "inverse",
                "label": "t:sections.all.colors.inverse.label"
              }
            ],
          "default": "background-1",
          "label": "t:sections.all.colors.label"
        },
        {
          "type": "text",
          "id": "bg-opacity",
          "label": "t:sections.contact-section.blocks.column.settings.bg-opacity.label"
        }
      ]
    }
  ],
    "presets": [
    {
      "name": "t:sections.contact-section.presets.name",
      "blocks": [
      ]
    }
  ]
}

